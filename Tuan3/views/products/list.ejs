<%- include('../layout', {title: typeof title !== 'undefined' ? title : 'Danh sách sản phẩm', currentPage: 'list'}) %>
<style>
  /* Products Grid */
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 25px;
    margin-top: 20px;
  }

  .product-card {
    background: white;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.8);
  }

  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .product-image-container {
    position: relative;
    height: 200px;
    overflow: hidden;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  }

  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .product-card:hover .product-image {
    transform: scale(1.05);
  }

  .product-info {
    padding: 25px;
  }

  .product-name {
    font-size: 1.3em;
    font-weight: 700;
    color: #333;
    margin-bottom: 10px;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .product-name i {
    color: #667eea;
  }

  .product-details {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  .product-price {
    font-size: 1.4em;
    font-weight: 700;
    color: #667eea;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .product-price i {
    color: #51cf66;
  }

  .product-quantity {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 8px 16px;
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.9em;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .product-actions {
    display: flex;
    gap: 10px;
    justify-content: space-between;
  }

  .action-btn {
    flex: 1;
    padding: 12px 16px;
    border: none;
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    font-size: 0.9em;
  }

  .edit-btn {
    background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
    color: white;
  }

  .edit-btn:hover {
    background: linear-gradient(135deg, #0984e3 0%, #74b9ff 100%);
    transform: translateY(-2px);
  }

  .delete-btn {
    background: linear-gradient(135deg, #ff7675 0%, #d63031 100%);
    color: white;
  }

  .delete-btn:hover {
    background: linear-gradient(135deg, #d63031 0%, #ff7675 100%);
    transform: translateY(-2px);
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 80px 40px;
    background: white;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    grid-column: 1 / -1;
  }

  .empty-state .empty-icon {
    font-size: 4em;
    color: #ddd;
    margin-bottom: 20px;
  }

  .empty-state h2 {
    color: #333;
    margin-bottom: 15px;
    font-size: 1.8em;
  }

  .empty-state p {
    color: #666;
    margin-bottom: 30px;
    font-size: 1.1em;
  }

  /* Stats Cards */
  .stats-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-bottom: 40px;
  }

  .stat-card {
    background: white;
    padding: 25px;
    border-radius: 15px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    text-align: center;
    border-left: 4px solid #667eea;
  }

  .stat-card .stat-icon {
    font-size: 2em;
    color: #667eea;
    margin-bottom: 10px;
  }

  .stat-card .stat-number {
    font-size: 2em;
    font-weight: 700;
    color: #333;
    margin-bottom: 5px;
  }

  .stat-card .stat-label {
    color: #666;
    font-weight: 500;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .products-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .product-info {
      padding: 20px;
    }

    .product-name {
      font-size: 1.1em;
    }

    .product-price {
      font-size: 1.2em;
    }

    .stats-container {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .stats-container {
      grid-template-columns: 1fr;
    }

    .product-actions {
      flex-direction: column;
    }

    .action-btn {
      margin-bottom: 8px;
    }
  }
</style>

<div class="page-header">
  <h2><i class="fas fa-boxes"></i> Danh sách sản phẩm</h2>
  <a href="/create" class="btn btn-success">
    <i class="fas fa-plus"></i>
    Thêm sản phẩm
  </a>
</div>

<% if (products.length === 0) { %>
  <div class="empty-state">
    <div class="empty-icon">
      <i class="fas fa-box-open"></i>
    </div>
    <h2>Chưa có sản phẩm nào</h2>
    <p>Hãy bắt đầu bằng việc thêm sản phẩm đầu tiên của bạn!</p>
    <a href="/create" class="btn btn-success">
      <i class="fas fa-plus-circle"></i>
      Thêm sản phẩm đầu tiên
    </a>
  </div>
<% } else { %>
  <!-- Stats Cards -->
  <div class="stats-container">
    <div class="stat-card">
      <div class="stat-icon">
        <i class="fas fa-boxes"></i>
      </div>
      <div class="stat-number"><%= products.length %></div>
      <div class="stat-label">Tổng sản phẩm</div>
    </div>
    <div class="stat-card">
      <div class="stat-icon">
        <i class="fas fa-dollar-sign"></i>
      </div>
      <div class="stat-number"><%= new Intl.NumberFormat('vi-VN').format(products.reduce((sum, p) => sum + (p.price * p.quantity), 0)) %>₫</div>
      <div class="stat-label">Tổng giá trị</div>
    </div>
    <div class="stat-card">
      <div class="stat-icon">
        <i class="fas fa-cubes"></i>
      </div>
      <div class="stat-number"><%= products.reduce((sum, p) => sum + p.quantity, 0) %></div>
      <div class="stat-label">Tổng số lượng</div>
    </div>
    <div class="stat-card">
      <div class="stat-icon">
        <i class="fas fa-chart-line"></i>
      </div>
      <div class="stat-number"><%= Math.round(products.reduce((sum, p) => sum + p.price, 0) / products.length / 1000) * 1000 %></div>
      <div class="stat-label">Giá trung bình</div>
    </div>
  </div>

  <!-- Products Grid -->
  <div class="products-grid">
    <% products.forEach(p => { %>
      <div class="product-card">
        <div class="product-image-container">
          <img src="<%= p.url_image %>" alt="<%= p.name %>" class="product-image" />
        </div>
        <div class="product-info">
          <div class="product-name">
            <i class="fas fa-tag"></i>
            <%= p.name %>
          </div>

          <div class="product-details">
            <div class="product-price">
              <i class="fas fa-coins"></i>
              <%= new Intl.NumberFormat('vi-VN').format(p.price) %> ₫
            </div>
            <div class="product-quantity">
              <i class="fas fa-cube"></i>
              <%= p.quantity %>
            </div>
          </div>

          <div class="product-actions">
            <a href="/edit/<%= p.id %>" class="action-btn edit-btn">
              <i class="fas fa-edit"></i>
              Chỉnh sửa
            </a>
            <form action="/delete/<%= p.id %>" method="post" style="flex: 1;">
              <button type="submit" class="action-btn delete-btn"
                      onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')">
                <i class="fas fa-trash"></i>
                Xóa
              </button>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>
<%- include('../footer') %>
