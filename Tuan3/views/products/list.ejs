<%- include('../layout', {title: typeof title !== 'undefined' ? title : 'Danh sách sản phẩm'}) %>

<!-- Stats Cards -->
<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem; margin-bottom: 2rem;">
  <div class="card">
    <div class="card-body" style="text-align: center;">
      <div style="font-size: 2.5rem; color: var(--primary-color); margin-bottom: 0.5rem;">
        <i class="fas fa-shopping-bag"></i>
      </div>
      <h3 style="color: var(--text-dark); margin-bottom: 0.25rem;"><%= products.length %></h3>
      <p style="color: var(--text-light); margin: 0;">Tổng sản phẩm</p>
    </div>
  </div>
  
  <div class="card">
    <div class="card-body" style="text-align: center;">
      <div style="font-size: 2.5rem; color: var(--success-color); margin-bottom: 0.5rem;">
        <i class="fas fa-check-circle"></i>
      </div>
      <h3 style="color: var(--text-dark); margin-bottom: 0.25rem;">
        <%= products.filter(p => p.quantity > 10).length %>
      </h3>
      <p style="color: var(--text-light); margin: 0;">Còn hàng</p>
    </div>
  </div>
  
  <div class="card">
    <div class="card-body" style="text-align: center;">
      <div style="font-size: 2.5rem; color: var(--warning-color); margin-bottom: 0.5rem;">
        <i class="fas fa-exclamation-triangle"></i>
      </div>
      <h3 style="color: var(--text-dark); margin-bottom: 0.25rem;">
        <%= products.filter(p => p.quantity <= 10 && p.quantity > 0).length %>
      </h3>
      <p style="color: var(--text-light); margin: 0;">Sắp hết</p>
    </div>
  </div>
  
  <div class="card">
    <div class="card-body" style="text-align: center;">
      <div style="font-size: 2.5rem; color: var(--danger-color); margin-bottom: 0.5rem;">
        <i class="fas fa-times-circle"></i>
      </div>
      <h3 style="color: var(--text-dark); margin-bottom: 0.25rem;">
        <%= products.filter(p => p.quantity === 0).length %>
      </h3>
      <p style="color: var(--text-light); margin: 0;">Hết hàng</p>
    </div>
  </div>
</div>

<!-- Page Header -->
<div class="page-header">
  <h1 class="page-title">
    <i class="fas fa-shopping-bag"></i>
    Danh sách sản phẩm
  </h1>
  <% if (typeof user !== 'undefined' && user && user.role === 'admin') { %>
    <a href="/create" class="btn btn-primary">
      <i class="fas fa-plus"></i>
      Thêm sản phẩm
    </a>
  <% } %>
</div>

<!-- Filter Section -->
<div class="card" style="margin-bottom: 2rem;">
  <div class="card-header">
    <h3 class="card-title">
      <i class="fas fa-search"></i>
      Tìm kiếm & Lọc
    </h3>
  </div>
  <div class="card-body">
    <form method="GET" action="/" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; align-items: end;">
      <div>
        <label style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: var(--text-dark);">Tìm kiếm</label>
        <input type="text" name="search" value="<%= typeof search !== 'undefined' ? search : '' %>" 
               placeholder="Tên sản phẩm..."
               style="width: 100%; padding: 0.75rem; border: 2px solid var(--border-color); border-radius: 8px; font-size: 0.875rem;">
      </div>

      <div>
        <label style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: var(--text-dark);">Danh mục</label>
        <select name="category" style="width: 100%; padding: 0.75rem; border: 2px solid var(--border-color); border-radius: 8px; font-size: 0.875rem;">
          <option value="">Tất cả danh mục</option>
          <% if (typeof categories !== 'undefined' && categories) { %>
            <% categories.forEach(cat => { %>
              <option value="<%= cat.categoryId %>" <%= (typeof category !== 'undefined' && category === cat.categoryId) ? 'selected' : '' %>>
                <%= cat.name %>
              </option>
            <% }) %>
          <% } %>
        </select>
      </div>

      <div>
        <label style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: var(--text-dark);">Tình trạng</label>
        <select name="stock" style="width: 100%; padding: 0.75rem; border: 2px solid var(--border-color); border-radius: 8px; font-size: 0.875rem;">
          <option value="">Tất cả</option>
          <option value="in_stock" <%= (typeof stock !== 'undefined' && stock === 'in_stock') ? 'selected' : '' %>>Còn hàng</option>
          <option value="low_stock" <%= (typeof stock !== 'undefined' && stock === 'low_stock') ? 'selected' : '' %>>Sắp hết</option>
          <option value="out_of_stock" <%= (typeof stock !== 'undefined' && stock === 'out_of_stock') ? 'selected' : '' %>>Hết hàng</option>
        </select>
      </div>

      <div style="display: flex; gap: 0.5rem;">
        <button type="submit" class="btn btn-primary" style="margin: 0;">
          <i class="fas fa-search"></i>
          Tìm kiếm
        </button>
        <a href="/" class="btn btn-secondary" style="margin: 0;">
          <i class="fas fa-redo"></i>
          Reset
        </a>
      </div>
    </form>
  </div>
</div>

<% if (products.length === 0) { %>
  <!-- Empty State -->
  <div class="card">
    <div class="card-body" style="text-align: center; padding: 4rem 2rem;">
      <div style="font-size: 4rem; color: var(--text-light); margin-bottom: 1rem;">
        <i class="fas fa-box-open"></i>
      </div>
      <h2 style="color: var(--text-dark); margin-bottom: 1rem;">Không có sản phẩm nào</h2>
      <p style="color: var(--text-light); margin-bottom: 2rem;">
        <%= typeof search !== 'undefined' && search ? 'Không tìm thấy sản phẩm phù hợp với từ khóa tìm kiếm.' : 'Hãy thêm sản phẩm đầu tiên của bạn!' %>
      </p>
      <% if (typeof user !== 'undefined' && user && user.role === 'admin') { %>
        <a href="/create" class="btn btn-primary">
          <i class="fas fa-plus"></i>
          Thêm sản phẩm
        </a>
      <% } %>
    </div>
  </div>
<% } else { %>
  <!-- Products Grid -->
  <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); gap: 1.5rem;">
    <% products.forEach(product => { %>
      <div class="card" style="overflow: hidden;">
        <div style="position: relative; overflow: hidden;">
          <img src="<%= product.url_image %>" alt="<%= product.name %>" 
               style="width: 100%; height: 240px; object-fit: cover; transition: transform 0.3s;">
          
          <!-- Stock Badge -->
          <div style="position: absolute; top: 1rem; right: 1rem;">
            <% 
              const quantity = Number(product.quantity) || 0;
              let stockStatus = 'in_stock';
              let stockText = 'Còn hàng';
              let stockIcon = 'fas fa-check-circle';
              
              if (quantity === 0) {
                stockStatus = 'out_of_stock';
                stockText = 'Hết hàng';
                stockIcon = 'fas fa-times-circle';
              } else if (quantity <= 10) {
                stockStatus = 'low_stock';
                stockText = 'Sắp hết';
                stockIcon = 'fas fa-exclamation-triangle';
              }
            %>
            <%
              const quantity = Number(product.quantity) || 0;
              let stockClass = 'stock-success';
              
              if (quantity === 0) {
                stockClass = 'stock-danger';
              } else if (quantity <= 10) {
                stockClass = 'stock-warning';
              }
            %>
            <span class="stock-badge <%= stockClass %>">
              <i class="<%= stockIcon %>"></i>
              <%= stockText %>
            </span>
          </div>
        </div>

        <div class="card-body">
          <h3 style="color: var(--text-dark); margin-bottom: 0.5rem; font-size: 1.25rem; line-height: 1.4;">
            <%= product.name %>
          </h3>
          
          <%
            // Tìm tên category từ categoryId
            let categoryName = null;
            if (product.categoryId && typeof categories !== 'undefined' && categories) {
              const category = categories.find(cat => cat.categoryId === product.categoryId);
              if (category) {
                categoryName = category.name;
              }
            }
          %>
          
          <% if (categoryName) { %>
            <div style="display: inline-flex; align-items: center; background: var(--bg-light); color: var(--text-light); padding: 0.25rem 0.75rem; border-radius: 12px; font-size: 0.75rem; margin-bottom: 1rem;">
              <i class="fas fa-tag" style="margin-right: 0.25rem;"></i>
              <%= categoryName %>
            </div>
          <% } %>

          <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
            <div style="color: var(--primary-color); font-size: 1.5rem; font-weight: 700;">
              <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(product.price) %>
            </div>
            <div style="color: var(--text-light); font-size: 0.875rem;">
              <i class="fas fa-boxes"></i>
              SL: <%= product.quantity %>
            </div>
          </div>

          <% if (typeof user !== 'undefined' && user && user.role === 'admin') { %>
            <div style="display: flex; gap: 0.5rem;">
              <a href="/edit/<%= product.id %>" class="btn btn-secondary" style="flex: 1; margin: 0; padding: 0.5rem; font-size: 0.875rem;">
                <i class="fas fa-edit"></i>
                Sửa
              </a>
              <form action="/delete/<%= product.id %>" method="post" style="flex: 1;">
                <button type="submit" class="btn btn-danger" 
                        style="width: 100%; margin: 0; padding: 0.5rem; font-size: 0.875rem;"
                        onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')">
                  <i class="fas fa-trash"></i>
                  Xóa
                </button>
              </form>
            </div>
          <% } %>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>

<style>
  .card:hover img {
    transform: scale(1.05);
  }
  
  input:focus, select:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  }
  
  .stock-badge {
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
  }
  
  .stock-success {
    background: #10b981;
  }
  
  .stock-warning {
    background: #f59e0b;
  }
  
  .stock-danger {
    background: #ef4444;
  }
</style>

<%- include('../footer') %>
