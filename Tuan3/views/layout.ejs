      <h1><i class="fas fa-box"></i> E-COMMERCE</h1>
      <p class="subtitle">Bùi Thiên Hoàng - 22669691</p>
    </div>
    
    <div class="nav-menu">
      <div class="nav-item">
        <a href="/" class="nav-link">
          <i class="fas fa-home"></i>
          <span>Trang chủ</span>
        </a>
      </div>
      <div class="nav-item">
        <a href="/products" class="nav-link">
          <i class="fas fa-shopping-bag"></i>
          <span>Sản phẩm</span>
        </a>
      </div>
      <div class="nav-item">
        <a href="/categories" class="nav-link">
          <i class="fas fa-tags"></i>
          <span>Danh mục</span>
        </a>
      </div>
