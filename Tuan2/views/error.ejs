<%- include('./layout', {title: 'Lỗi'}) %>
<style>
  .error-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
    padding: 40px 20px;
  }

  .error-card {
    background: white;
    border-radius: 20px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    padding: 60px 40px;
    text-align: center;
    max-width: 500px;
    width: 100%;
    border: 1px solid rgba(255, 255, 255, 0.8);
  }

  .error-icon {
    font-size: 5em;
    color: #ff6b6b;
    margin-bottom: 30px;
    animation: bounce 2s infinite;
  }

  .error-title {
    font-size: 2.2em;
    font-weight: 700;
    color: #333;
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15px;
  }

  .error-message {
    color: #666;
    font-size: 1.1em;
    line-height: 1.6;
    margin-bottom: 40px;
  }

  .error-details {
    background: linear-gradient(135deg, #f8f9ff 0%, #fff5f5 100%);
    border: 1px solid #fed7d7;
    border-radius: 10px;
    padding: 20px;
    margin-bottom: 30px;
    text-align: left;
  }

  .error-details h4 {
    color: #e53e3e;
    margin-bottom: 10px;
    font-weight: 600;
  }

  .error-details p {
    color: #666;
    font-family: 'Courier New', monospace;
    font-size: 0.9em;
    background: white;
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #e2e8f0;
  }

  .error-actions {
    display: flex;
    gap: 15px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .error-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 15px;
    margin-top: 30px;
    padding-top: 30px;
    border-top: 1px solid #e1e5e9;
  }

  .stat-item {
    text-align: center;
  }

  .stat-icon {
    font-size: 1.5em;
    color: #667eea;
    margin-bottom: 5px;
  }

  .stat-label {
    color: #666;
    font-size: 0.9em;
    font-weight: 500;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .error-card {
      padding: 40px 20px;
    }

    .error-title {
      font-size: 1.8em;
      flex-direction: column;
      gap: 10px;
    }

    .error-icon {
      font-size: 4em;
    }

    .error-actions {
      flex-direction: column;
    }

    .error-stats {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .error-stats {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="error-container">
  <div class="error-card">
    <div class="error-icon">
      <i class="fas fa-exclamation-triangle"></i>
    </div>

    <h1 class="error-title">
      <i class="fas fa-times-circle"></i>
      Đã xảy ra lỗi
    </h1>

    <p class="error-message">
      <%= typeof message !== 'undefined' ? message : 'Có lỗi xảy ra trong quá trình xử lý. Vui lòng thử lại sau hoặc liên hệ quản trị viên.' %>
    </p>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="error-details">
        <h4><i class="fas fa-bug"></i> Chi tiết lỗi:</h4>
        <p><%= error.message || error %></p>
      </div>
    <% } %>

    <div class="error-actions">
      <a href="/" class="btn">
        <i class="fas fa-home"></i>
        Về trang chủ
      </a>
      <a href="javascript:history.back()" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i>
        Quay lại
      </a>
      <button onclick="location.reload()" class="btn btn-success">
        <i class="fas fa-redo"></i>
        Thử lại
      </button>
    </div>

    <div class="error-stats">
      <div class="stat-item">
        <div class="stat-icon">
          <i class="fas fa-clock"></i>
        </div>
        <div class="stat-label">Thời gian: <%= new Date().toLocaleTimeString('vi-VN') %></div>
      </div>
      <div class="stat-item">
        <div class="stat-icon">
          <i class="fas fa-server"></i>
        </div>
        <div class="stat-label">Server: AWS EC2</div>
      </div>
      <div class="stat-item">
        <div class="stat-icon">
          <i class="fas fa-code"></i>
        </div>
        <div class="stat-label">Framework: Node.js</div>
      </div>
      <div class="stat-item">
        <div class="stat-icon">
          <i class="fas fa-database"></i>
        </div>
        <div class="stat-label">Database: DynamoDB</div>
      </div>
    </div>
  </div>
</div>
<%- include('./footer') %>
