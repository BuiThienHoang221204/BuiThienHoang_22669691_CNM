<%- include('../layout', {title: typeof title !== 'undefined' ? title : 'Thêm sản phẩm', currentPage: 'create'}) %>
<style>
  /* Form Container */
  .form-card {
    background: white;
    border-radius: 20px;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    max-width: 900px;
    width: 95%;
    margin: 0 auto;
  }

  .form-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 50px 40px;
    text-align: center;
  }

  .form-header h2 {
    font-size: 2.2em;
    font-weight: 700;
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15px;
  }

  .form-header p {
    opacity: 0.9;
    font-size: 1.2em;
  }

  .form-body {
    padding: 50px 40px;
  }

  /* Form Groups */
  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
    margin-bottom: 30px;
  }

  .form-group {
    margin-bottom: 30px;
  }

  .form-group.full-width {
    grid-column: 1 / -1;
  }

  .form-label {
    display: block;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    font-size: 1.1em;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .form-label i {
    color: #667eea;
    font-size: 1em;
  }

  .form-input {
    width: 100%;
    padding: 18px 22px;
    border: 2px solid #e1e5e9;
    border-radius: 12px;
    font-size: 16px;
    transition: all 0.3s ease;
    background: #fafbfc;
    font-family: inherit;
  }

  .form-input:focus {
    outline: none;
    border-color: #667eea;
    background: white;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    transform: translateY(-1px);
  }

  .form-input:hover {
    border-color: #b8c5d1;
  }

  textarea.form-input {
    resize: vertical;
    min-height: 100px;
  }

  /* File Input Styling */
  .file-input-container {
    position: relative;
    overflow: hidden;
    border: 2px dashed #667eea;
    border-radius: 15px;
    background: linear-gradient(135deg, #f8f9ff 0%, #e8f2ff 100%);
    transition: all 0.3s ease;
    cursor: pointer;
    min-height: 120px;
  }

  .file-input-container:hover {
    border-color: #5a67d8;
    background: linear-gradient(135deg, #f0f4ff 0%, #e0e7ff 100%);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.15);
  }

  .file-input-container.dragover {
    border-color: #48bb78;
    background: linear-gradient(135deg, #f0fff4 0%, #c6f6d5 100%);
  }

  .file-input {
    position: absolute;
    opacity: 0;
    width: 100%;
    height: 100%;
    cursor: pointer;
  }

  .file-input-label {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 50px 30px;
    text-align: center;
    color: #4a5568;
    font-weight: 500;
  }

  .file-input-label i {
    font-size: 3.5em;
    color: #667eea;
    margin-bottom: 20px;
  }

  .file-input-label span {
    font-size: 1.2em;
    margin-bottom: 8px;
    font-weight: 600;
  }

  .file-input-label small {
    color: #718096;
    font-size: 1em;
  }

  /* Form Actions */
  .form-actions {
    display: flex;
    gap: 20px;
    justify-content: center;
    margin-top: 50px;
    padding-top: 35px;
    border-top: 2px solid #e1e5e9;
  }

  /* Progress Indicator */
  .form-progress {
    display: flex;
    justify-content: center;
    margin-bottom: 40px;
  }

  .progress-step {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 15px 30px;
    background: #f7fafc;
    border-radius: 30px;
    font-weight: 500;
    color: #4a5568;
    font-size: 1.1em;
  }

  .progress-step.active {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .progress-step i {
    font-size: 1.3em;
  }

  /* Validation Messages */
  .form-error {
    color: #e53e3e;
    font-size: 0.9em;
    margin-top: 5px;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .form-error i {
    font-size: 0.8em;
  }

  .form-success {
    color: #38a169;
    font-size: 0.9em;
    margin-top: 5px;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .form-body {
      padding: 30px 25px;
    }

    .form-row {
      grid-template-columns: 1fr;
      gap: 25px;
    }

    .form-header h2 {
      font-size: 1.8em;
    }

    .form-actions {
      flex-direction: column;
    }

    .file-input-label {
      padding: 40px 25px;
    }

    .file-input-label i {
      font-size: 3em;
    }
  }

  @media (max-width: 480px) {
    .form-card {
      width: 98%;
      margin: 0 1%;
    }

    .form-header {
      padding: 35px 20px;
    }

    .form-header h2 {
      font-size: 1.5em;
      flex-direction: column;
      gap: 12px;
    }

    .form-body {
      padding: 25px 20px;
    }

    .file-input-label {
      padding: 35px 20px;
    }

    .file-input-label i {
      font-size: 2.5em;
    }

    .file-input-label span {
      font-size: 1.1em;
    }
  }
</style>

<div class="page-header">
  <h2><i class="fas fa-plus-circle"></i> Thêm sản phẩm mới</h2>
</div>

<div class="form-card">
  <div class="form-header">
    <h2><i class="fas fa-box"></i> Thông tin sản phẩm</h2>
    <p>Điền đầy đủ thông tin để thêm sản phẩm mới</p>
  </div>

  <div class="form-progress">
    <div class="progress-step active">
      <i class="fas fa-info-circle"></i>
      <span>Thông tin cơ bản</span>
    </div>
  </div>

  <form class="form-body" action="/create" method="POST" enctype="multipart/form-data" id="productForm">
    <div class="form-row">
      <div class="form-group">
        <label class="form-label" for="name">
          <i class="fas fa-tag"></i>
          Tên sản phẩm *
        </label>
        <input type="text" id="name" name="name" class="form-input"
               placeholder="Nhập tên sản phẩm" required>
        <div class="form-error" id="nameError" style="display: none;">
          <i class="fas fa-exclamation-circle"></i>
          <span>Vui lòng nhập tên sản phẩm</span>
        </div>
      </div>

      <div class="form-group">
        <label class="form-label" for="price">
          <i class="fas fa-dollar-sign"></i>
          Giá (VNĐ) *
        </label>
        <input type="number" id="price" name="price" class="form-input"
               placeholder="Nhập giá sản phẩm" min="0" step="1000" required>
        <div class="form-error" id="priceError" style="display: none;">
          <i class="fas fa-exclamation-circle"></i>
          <span>Vui lòng nhập giá hợp lệ</span>
        </div>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label class="form-label" for="quantity">
          <i class="fas fa-cubes"></i>
          Số lượng tồn kho *
        </label>
        <input type="number" id="quantity" name="quantity" class="form-input"
               placeholder="Nhập số lượng" min="0" required>
        <div class="form-error" id="quantityError" style="display: none;">
          <i class="fas fa-exclamation-circle"></i>
          <span>Vui lòng nhập số lượng hợp lệ</span>
        </div>
      </div>

      <div class="form-group">
        <label class="form-label" for="category">
          <i class="fas fa-folder"></i>
          Danh mục
        </label>
        <select id="category" name="category" class="form-input">
          <option value="">Chọn danh mục (tùy chọn)</option>
          <option value="electronics">Điện tử</option>
          <option value="clothing">Quần áo</option>
          <option value="books">Sách</option>
          <option value="home">Gia dụng</option>
          <option value="sports">Thể thao</option>
          <option value="other">Khác</option>
        </select>
      </div>
    </div>

    <div class="form-group full-width">
      <label class="form-label" for="description">
        <i class="fas fa-align-left"></i>
        Mô tả sản phẩm
      </label>
      <textarea id="description" name="description" class="form-input"
                placeholder="Nhập mô tả chi tiết về sản phẩm (tùy chọn)" rows="5"></textarea>
    </div>

    <div class="form-group full-width">
      <label class="form-label" for="image">
        <i class="fas fa-image"></i>
        Hình ảnh sản phẩm *
      </label>
      <div class="file-input-container" id="fileInputContainer">
        <input type="file" id="image" name="image" class="file-input" accept="image/*" required>
        <label for="image" class="file-input-label">
          <i class="fas fa-cloud-upload-alt"></i>
          <span>Kéo thả hình ảnh vào đây hoặc click để chọn</span>
          <small>JPG, PNG, GIF - Tối đa 5MB</small>
        </label>
      </div>
      <div class="form-error" id="imageError" style="display: none;">
        <i class="fas fa-exclamation-circle"></i>
        <span>Vui lòng chọn hình ảnh sản phẩm</span>
      </div>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-success">
        <i class="fas fa-save"></i>
        Lưu sản phẩm
      </button>
      <a href="/" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i>
        Quay lại
      </a>
    </div>
  </form>
</div>

<script>
  // File drag and drop functionality
  const fileInputContainer = document.getElementById('fileInputContainer');
  const fileInput = document.getElementById('image');

  ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
    fileInputContainer.addEventListener(eventName, preventDefaults, false);
  });

  function preventDefaults(e) {
    e.preventDefault();
    e.stopPropagation();
  }

  ['dragenter', 'dragover'].forEach(eventName => {
    fileInputContainer.addEventListener(eventName, highlight, false);
  });

  ['dragleave', 'drop'].forEach(eventName => {
    fileInputContainer.addEventListener(eventName, unhighlight, false);
  });

  function highlight(e) {
    fileInputContainer.classList.add('dragover');
  }

  function unhighlight(e) {
    fileInputContainer.classList.remove('dragover');
  }

  fileInputContainer.addEventListener('drop', handleDrop, false);

  function handleDrop(e) {
    const dt = e.dataTransfer;
    const files = dt.files;

    if (files.length > 0) {
      fileInput.files = files;
      updateFileLabel(files[0]);
    }
  }

  fileInput.addEventListener('change', function(e) {
    if (this.files.length > 0) {
      updateFileLabel(this.files[0]);
    }
  });

  function updateFileLabel(file) {
    const label = fileInputContainer.querySelector('.file-input-label');
    label.innerHTML = `
      <i class="fas fa-check-circle" style="color: #48bb78;"></i>
      <span>${file.name}</span>
      <small>${(file.size / 1024 / 1024).toFixed(2)} MB</small>
    `;
  }

  // Form validation
  document.getElementById('productForm').addEventListener('submit', function(e) {
    let isValid = true;

    // Reset errors
    document.querySelectorAll('.form-error').forEach(error => {
      error.style.display = 'none';
    });

    // Validate name
    const name = document.getElementById('name').value.trim();
    if (!name) {
      document.getElementById('nameError').style.display = 'flex';
      isValid = false;
    }

    // Validate price
    const price = document.getElementById('price').value;
    if (!price || price < 0) {
      document.getElementById('priceError').style.display = 'flex';
      isValid = false;
    }

    // Validate quantity
    const quantity = document.getElementById('quantity').value;
    if (!quantity || quantity < 0) {
      document.getElementById('quantityError').style.display = 'flex';
      isValid = false;
    }

    // Validate image
    if (!fileInput.files.length) {
      document.getElementById('imageError').style.display = 'flex';
      isValid = false;
    }

    if (!isValid) {
      e.preventDefault();
    }
  });
</script>
